pipeline {
	triggers {
		cron '*/2 * * * *'
	}
	agent {
		label 'nodejs'
	}
	stages{
		stage('check drift'){
			steps {

				sh 'oc diff -k samples > diff.txt'
				sh '''
				    ! test -s diff.txt 
				'''
			}
		}
                

	}
	post {
		success {
			archiveArtifacts artifacts: '*.txt'
		}
                failure {
			build job: 'apply/main'
			archiveArtifacts artifacts: '*.txt'
		}
	}
}
